<!doctype html>

{% extends 'base.j2' %}

{% block content %}
    <h1>Reset Password</h1>
    In order to reset your password enter your email.<br>
    In case you didn't add an email to your account: hit up rafl<br>
    <form action="" method="post" novalidate>
        {{ form.hidden_tag() }}
        <p>
            {{ form.email.label }}<br>
            {{ form.email(size=32) }}<br>
            {% for error in form.email.errors %}
            <span style="color: red;">{{ error }}</span>
            {% endfor %}
        </p>
        <p>{{ form.submit }}</p>
    </form>
{% endblock content %}
